<div id="allperf" class="bg-image">
    <h2>Availability</h2>

    <div class="container mt-4">
        <div class="row">

            {{#each storeAvailable}}

                <div class="col-md-4 col-sm-6">
                    <div class="card card-block">


                        <div class="text-perfume">

                            <div class="container-card">
                                <ul>
                                    <h3 class="perfume-name"> {{@key}}: </h3>
                                        {{#each this}}
                                            <li><a href="/perfume/{{this.perfId}}"> {{this.perfume}} </a> ( {{this.quantity}} ) </li>
                                            {{!--<li><a href="/perfume/"> {{this}} </a>  </li> --}}
                                        {{/each}}

                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            {{/each}}
        </div>
    </div> 
</div>