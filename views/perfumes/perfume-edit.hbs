
{{#if user.store}}

<div id="allperf" class="bg-image">
  <h4>Edit Perfume</h4>
  <div class="card-position">
    <div class="edit-perfume">
      <div class="card text-left" style="width: 60rem;">
        <div class="card-body">
          <form action="/perfumes/{{foundPerfume._id}}/edit" method="POST">
            <p>
              <label class="forms-font">Name:</label>
              <input type="text" name="name" value="{{foundPerfume.name}}" size="50" />
            </p>
            <p>
              <label class="forms-font">Manufacturer:</label>
              <input type="text" name="manufacturer" value="{{foundPerfume.manufacturer}}" size="50" />
            </p>
            <p>
              <label class="forms-font">Fragrance:</label>
              <input type="text" name="fragrance" value="{{foundPerfume.fragrance}}" size="50" />
            </p>
            <p>
              <label class="forms-font">Composition:</label>
              <input type="text" name="composition" value="{{foundPerfume.composition}}" size="50" />
            </p>
            <div>
              <button action="submit">Submit</button>
              <button action="/perfumes/delete">Delete</button>
            </div>

          </form>
        </div>
        {{else}}
        <div class="no-credentials">
          <h2> This is the edit page.</h2>
          <h3>You don't have credentials to edit. </h3>
        </div>
        {{/if}}

        {{#if errorMessage}}
        <div class="error-message">{{ errorMessage }}</div>
        {{/if}}

      </div>
    </div>
  </div>
</div>